        <TextBlock x:Name="cashP0" HorizontalAlignment="Left" Margin="294.75,128.75,0,0" Text="10,000 chips" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Bahnschrift" Width="120" Height="18.75" TextAlignment="Center" Visibility="Hidden">
            <TextBlock.Background>
                <SolidColorBrush Color="White" Opacity="0.2"/>
            </TextBlock.Background>
        </TextBlock>
        <TextBlock x:Name="cashP1" HorizontalAlignment="Left" Margin="630,128.75,0,0" Text="10,000 chips" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Bahnschrift" Width="120" Height="18.75" TextAlignment="Center" Visibility="Hidden">
