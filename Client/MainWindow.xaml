        <TextBlock x:Name="nameP5" HorizontalAlignment="Right" Margin="0,348,900,0" Text="Name" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Bell MT" FontSize="16" Width="120" Height="18.75" TextAlignment="Center" FontWeight="Bold" Visibility="Hidden">
